#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty -d ~

# program launcher
super + d
	dmenu_run

# web browser
super + b
    firefox

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# berry hotkeys
#

super + shift + r
    bash "$XDG_CONFIG_HOME/berry/autostart"

super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {1-9}
    berryc switch_workspace {0-9}

super + shift + {1-9}
    berryc send_to_workspace {0-9}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super +  p
    berryc snap_right

super + o 
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + shift + q
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus
